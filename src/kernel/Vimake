module: kernel
version: 0.0.3-34
autoimpls:
  source: x86_64
  dest:
    i686:
      params:
        bitness: 32
    aarch64: {}
    arm:
      params:
        bitness: 32
impls:
  x86_64:
    params:
      bitness: 64
    deps:
      build:
      - ${ImplName}-elf-g++
      - ${ImplName}-elf-gcc
      - ${ImplName}-elf-ld
      - ${ImplName}-elf-as
      modules: []
    actions:
      build:
        commands:
        - - ${ImplName}-elf-gcc
          - -m${param:bitness}
          - -nostdlib
          - -nostartfiles
          - -fno-stack-protector
          - -fno-pie
          - -ffreestanding
          - -c
          - -o
          - ${ModuleRoot}/dist/arith.o
          - ${ModuleRoot}/src/kernel/src/arith.c
        - - ${ImplName}-elf-g++
          - -std=c++20
          - -I${ModuleRoot}/include
          - -I${ModuleRoot}/include/arch/${ImplName}
          - -m${param:bitness}
          - -nostdlib
          - -nostartfiles
          - -nostdinc
          - -nostdinc++
          - -fno-stack-protector
          - -fno-pie
          - -ffreestanding
          - -o
          - ${ModuleRoot}/dist/kernel.elf
          - ${ModuleRoot}/src/kernel/src/main.cpp
          - ${ModuleRoot}/dist/arith.o
        - - elf2hxe
          - ${ModuleRoot}/dist/kernel.elf
          - ${ModuleRoot}/dist/kernel.hxe
          - hxeconfs/${ImplName}.json
        files:
        - ${ModuleRoot}/dist/kernel.elf
